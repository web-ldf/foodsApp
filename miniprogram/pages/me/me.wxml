<!--pages/me/me.wxml-->
<view wx:if="{{isHide}}">
  <view class='headView' wx:if="{{canIUse}}">
    <view class='headImageView'>
      <image class='headImage' src='/images/weixin.png' mode='scaleToFill'></image>
    </view>
    <view class='titleText'>申请获取以下权限</view>
    <view class='contentText'>获得你的公开信息(昵称,头像,手机等)</view>
    <button class='authBtn' type='primary' open-type='getUserInfo' bindgetuserinfo='bindGetUserInfo'>授权登录</button>
  </view>
</view>

<view class="mine" wx:else>
<view class="mine-top" >
  <van-nav-bar title="我的" custom-class="mine-color"
title-class="mine-text" safe-area-inset-top="{{false}}" border="{{false}}">
  <van-icon name="/images/setting.png" custom-class="me-left" slot="left" color="white" size="40rpx"/>
  <van-icon name="/images/message.png" custom-class="me-right" slot="right" size="40rpx"/>
</van-nav-bar>
<view class="borderRadius">
  <!-- 头像部分开始 -->
  <view class="user-container-top">
    <view class="user-item-top">
       <view class="userHead"><image src="{{userInfo.avatarUrl}}"></image></view>
       <view class="user-name">{{userInfo.nickName}}</view>
       <view class="user-city">{{userInfo.city}}</view>
    </view>
  </view>
  <!-- 头像部分结束 -->
  <!-- 下边收藏部分开始 -->
  <view class="user-container-bottom">
    <view class="user-item-bottom">
      <view class="user-item-bottom-image">
        <view><image src="/images/shoucang.png"></image></view>
        <view>收藏</view>
      </view>
      <view class="user-item-bottom-image">
        <view><image src="/images/pinglun.png"></image></view>
        <view>评论</view>
      </view>
      <view class="user-item-bottom-image">
        <view><image src="/images/liulan.png"></image></view>
        <view>浏览</view>
      </view>
    </view>
  </view>
</view>
</view>
<!--下边收藏部分结束 -->
<!-- 底部收货地址开始 -->
<view class="bottom-container">
  <van-cell custom-class="cell-distance" icon="/images/dizhi.png" border="{{true}}" is-link>
  <view slot="title" class="cell-item">
    <view class="van-cell-text">收货地址</view>
  </view>
</van-cell>
<van-cell  icon="/images/shoucang2.png" border="{{true}}" is-link>
  <view slot="title" class="cell-item">
    <view class="van-cell-text">收藏商家</view>
  </view>
</van-cell>
<van-cell  icon="/images/youhuiquan.png" border="{{true}}" is-link>
  <view slot="title" class="cell-item">
    <view class="van-cell-text">优惠劵</view>
  </view>
</van-cell>
</view>
</view>
<!-- 底部收货地址结束 -->

