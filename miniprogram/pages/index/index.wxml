<!-- 美食背景到banner部分开始 -->
<view class="foots-bg-Color">
<!-- 美食搜索头部开始 -->
<view class="footsHeader">
   <view class="address" bind:tap="showPopup">
      <view class="address-place" >重庆</view>
      <view class="address-image"><image src="/images/fanhui.png"></image></view>
   </view>
    <!-- 弹出层，用于选择地点 -->
   <van-popup
      show="{{ show }}"
      position="top"
      closeable
      custom-style="height: 40%;"
      bind:close="onClose">
    </van-popup>
   <view class="search">
      <view><input type="text" 
             placeholder="搜索您想要的美食" 
             placeholder-class="pgcolor"
             /></view>
      <navigator class="search-image"><image src="/images/search.png"></image></navigator>
   </view>
   <view class="message"><image mode="widthFix" src="/images/message.png"></image></view>
</view>
<!-- 美食搜索头部结束 -->
<view class="borderRadius">
  <view class="swiper-container">
  <swiper class="swiper"
          indicator-dots="true"
          autoplay="true"
          indicator-color="#fff"
          indicator-active-color="#ffc056"
          circular="true"
  >
     <swiper-item><navigator url="#"><image src="/images/banner1.jpg"></image></navigator></swiper-item>
     <swiper-item><navigator><image src="/images/banner2.jpg"></image></navigator></swiper-item>
     <swiper-item><navigator><image src="/images/banner3.jpg"></image></navigator></swiper-item>
  </swiper>
</view>
</view>
